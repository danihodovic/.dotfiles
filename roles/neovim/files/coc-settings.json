{
  "coc.preferences.formatOnSaveFiletypes": ["python", "javascript", "typescript", "htmldjango", "html"],
  "coc.preferences.formatOnType": false,
  "coc.source.emoji.filetypes": ["markdown", "htmldjango", "html"],
  "coc.source.word.filetypes": ["markdown", "txt"],
  "diagnostic.locationlist": false,
  "html.autoClosingTags": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "jedi.markupKindPreferred": "plaintext",
  "pairs.disableLanguages": ["html", "htmldjango"],
  "pyright.inlayHints.enable": false,
  "pyright.organizeimports.provider": "isort",
  "python.formatting.blackArgs": ["--diff", "--quiet", "--fast"],
